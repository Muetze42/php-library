{
    "name": "norman-huth/php-library",
    "description": "Personal library for PHP and Laravel",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "NormanHuth\\Library\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Norman Huth",
            "homepage": "https://huth.it"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^10.0|^11.0",
        "norman-huth/php-library-class-finder": "^1.0-rc.1",
        "norman-huth/php-library-commands": "^1.0-rc.1",
        "norman-huth/php-library-contracts": "^1.0-rc.1",
        "norman-huth/php-library-file-system": "^1.0-rc.1",
        "norman-huth/php-library-macros": "^1.0-rc.1",
        "norman-huth/php-library-middlewares": "^1.0-rc.1",
        "norman-huth/php-library-rules": "^1.0-rc.1"
    },
    "require-dev": {
        "laravel/pint": "^1.15",
        "nesbot/carbon": "^2.5|^3.0"
    },
    "replace": {
        "norman-huth/php-library-class-finder": "self.version",
        "norman-huth/php-library-commands": "self.version",
        "norman-huth/php-library-contracts": "self.version",
        "norman-huth/php-library-file-system": "self.version",
        "norman-huth/php-library-macros": "self.version",
        "norman-huth/php-library-middlewares": "self.version",
        "norman-huth/php-library-rules": "self.version"
    }
}
